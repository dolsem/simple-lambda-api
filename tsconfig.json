{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src"]
}
